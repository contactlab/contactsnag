{
  "name": "contactsnag",
  "version": "6.0.5",
  "description": "Bugsnag utilities for Contactlab's applications",
  "main": "lib/index.js",
  "module": "lib/es6/index.js",
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "author": "Contactlab",
  "license": "Apache-2.0",
  "repository": "contactlab/contactsnag",
  "bugs": {
    "url": "https://github.com/contactlab/contactsnag/issues"
  },
  "homepage": "https://github.com/contactlab/contactsnag#readme",
  "engines": {
    "node": ">=8.10 <11.0",
    "npm": ">=6.0"
  },
  "files": [
    "lib",
    "typings"
  ],
  "bin": "./lib/bin/cli.js",
  "keywords": [
    "contactlab",
    "clab",
    "bugsnag",
    "wrapper"
  ],
  "scripts": {
    "check": "tsc --noEmit",
    "lint": "tslint -p .",
    "jest": "jest --ci --coverage",
    "pretest": "npm run check && npm run lint",
    "test": "npm run jest",
    "prebuild": "rimraf ./lib",
    "build": "npm run build:std && npm run build:es6 && npm run build:bin",
    "build:std": "tsc -p ./tsconfig.build.json",
    "build:es6": "tsc -p ./tsconfig.build-es6.json",
    "build:bin": "tsc -p ./tsconfig.build-bin.json",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "@bugsnag/js": "6.5.0",
    "@types/webpack-bugsnag-plugins": "^1.4.0",
    "bugsnag-sourcemaps": "1.2.2",
    "chalk": "3.0.0",
    "fp-ts": "^2.0.5",
    "io-ts": "^2.0.1",
    "read-pkg-up": "7.0.1",
    "tslib": "^1.10.0",
    "webpack-bugsnag-plugins": "^1.4.0"
  },
  "devDependencies": {
    "@contactlab/tslint-config": "1.3.0",
    "@types/jest": "24.0.25",
    "@types/node": "12.12.24",
    "husky": "4.0.7",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.2.0",
    "ts-node": "8.5.4",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.4"
  },
  "jest": {
    "automock": false,
    "bail": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/bin/_helpers.ts",
      "<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "roots": [
      "<rootDir>/test/"
    ],
    "testRegex": "(\\.|/)spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    },
    "preset": "ts-jest",
    "testMatch": null
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
